#!/bin/bash
# Pre-commit hook: Run cargo fmt and clippy checks before committing

set -e

echo "ğŸ” Running code checks before commit..."

# Format code
echo "ğŸ“ Formatting code with cargo fmt..."
cargo fmt -- --check

# Check with clippy
echo "ğŸ¯ Checking with clippy..."
cargo clippy -- -D warnings

echo "âœ… All checks passed! Committing..."
